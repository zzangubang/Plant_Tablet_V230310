<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Transparent" parent="@style/Theme.Plant_IOT_Tablet2">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Widget.Theme.Plant_IOT_Tablet2.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <!-- AlertDialog !-->
    <style name="DialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">#FFFFFF</item> <!-- 배경색 !-->
        <item name="android:textColorPrimary">#646464</item> <!-- 텍스트 색상 !-->
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#6A9562</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#6A9562</item>
    </style>

    <!-- ProgressDialog !-->
    <style name="ProgressDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">#FFFFFF</item> <!-- 배경색 !-->
        <item name="android:textColor">#646464</item> <!-- 텍스트 색상 !-->
    </style>


    <!-- TabLayout !-->
    <style name="TabLayout" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/main_font</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- NumberPicked !-->
    <style name="NumberPicker" parent="@style/Theme.Design.NoActionBar">
        <item name="android:fontFamily">@font/main_font</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="colorControlNormal">@android:color/transparent</item>
    </style>

</resources>