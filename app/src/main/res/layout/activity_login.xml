<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#84A56C"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_30dp"
            android:fontFamily="@font/main_font"
            android:text="AJPLANTs"
            android:textColor="#000000"
            android:textSize="@dimen/size_35dp"
            android:textStyle="bold" />

        <!-- 아이디 Edit !-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45dp"
            android:layout_marginLeft="@dimen/size_100dp"
            android:layout_marginTop="@dimen/size_30dp"
            android:layout_marginRight="@dimen/size_100dp"
            android:background="@drawable/login_edit_layout">

            <ImageView
                android:id="@+id/id"
                android:layout_width="@dimen/size_25dp"
                android:layout_height="@dimen/size_25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_10dp"
                android:src="@drawable/login_icon_id" />

            <EditText
                android:id="@+id/edit_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_marginRight="@dimen/size_10dp"
                android:layout_toLeftOf="@+id/editNull_id"
                android:layout_toRightOf="@+id/id"
                android:background="@drawable/edit_layout"
                android:fontFamily="@font/main_font"
                android:hint="아이디"
                android:inputType="text"
                android:maxLength="20"
                android:textColor="#000000"
                android:textSize="@dimen/size_15dp" />

            <ImageView
                android:id="@+id/editNull_id"
                android:layout_width="@dimen/size_25dp"
                android:layout_height="@dimen/size_25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size_10dp" />

        </RelativeLayout>

        <!-- 비밀번호 Edit !-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45dp"
            android:layout_marginLeft="@dimen/size_100dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_100dp"
            android:background="@drawable/login_edit_layout">

            <ImageView
                android:id="@+id/pass"
                android:layout_width="@dimen/size_25dp"
                android:layout_height="@dimen/size_25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_10dp"
                android:src="@drawable/login_icon_pass" />

            <EditText
                android:id="@+id/edit_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_marginRight="@dimen/size_10dp"
                android:layout_toLeftOf="@+id/editNull_pass"
                android:layout_toRightOf="@+id/pass"
                android:background="@drawable/edit_layout"
                android:fontFamily="@font/main_font"
                android:hint="비밀번호"
                android:inputType="textPassword"
                android:maxLength="30"
                android:textColor="#000000"
                android:textSize="@dimen/size_15dp" />

            <ImageView
                android:id="@+id/editNull_pass"
                android:layout_width="@dimen/size_25dp"
                android:layout_height="@dimen/size_25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size_10dp" />

        </RelativeLayout>

        <!-- 로그인 오류 문구 !-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_100dp"
            android:layout_marginTop="@dimen/size_8dp"
            android:layout_marginRight="@dimen/size_100dp"
            android:layout_marginBottom="@dimen/size_8dp">

            <TextView
                android:id="@+id/wrongT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/main_font"
                android:textColor="#8C0000"
                android:textSize="@dimen/size_12dp" />

        </LinearLayout>

        <!-- 로그인 버튼 !-->
        <android.widget.Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_48dp"
            android:layout_marginLeft="@dimen/size_100dp"
            android:layout_marginRight="@dimen/size_100dp"
            android:background="@drawable/button_selector"
            android:fontFamily="@font/main_font"
            android:text="로그인"
            android:textColor="#ffffff"
            android:textSize="@dimen/size_17dp"
            android:textStyle="bold" />

        <!-- 아이디/비밀번호 찾기 및 회원가입 !-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/button_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/main_font"
                android:text="아이디 찾기"
                android:textColor="#494949"
                android:textSize="@dimen/size_15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_marginRight="@dimen/size_10dp"
                android:fontFamily="@font/main_font"
                android:text="|"
                android:textColor="#494949"
                android:textSize="@dimen/size_15dp" />

            <TextView
                android:id="@+id/button_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/main_font"
                android:text="비밀번호 찾기"
                android:textColor="#494949"
                android:textSize="@dimen/size_15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_marginRight="@dimen/size_10dp"
                android:fontFamily="@font/main_font"
                android:text="|"
                android:textColor="#494949"
                android:textSize="@dimen/size_15dp" />

            <TextView
                android:id="@+id/button_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/main_font"
                android:text="회원가입"
                android:textColor="#494949"
                android:textSize="@dimen/size_15dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>