<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/size_400dp"
    android:layout_height="@dimen/size_160dp"
    android:background="@drawable/dialog_layout"
    tools:context=".Activity_PassCheck">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/size_25dp"
            android:layout_marginTop="@dimen/size_40dp"
            android:layout_marginRight="@dimen/size_25dp"
            android:background="@drawable/dialog_edit_layout"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_5dp"
                android:layout_marginTop="@dimen/size_5dp"
                android:layout_marginEnd="@dimen/size_5dp"
                android:layout_marginRight="@dimen/size_7dp"
                android:layout_marginBottom="@dimen/size_5dp"
                android:layout_toLeftOf="@+id/editNull"
                android:background="@drawable/edit_layout"
                android:fontFamily="@font/main_font"
                android:hint="비밀번호를 입력해주세요"
                android:inputType="textPassword"
                android:maxLength="30"
                android:textColor="#000000"
                android:textColorHint="#A2A2A2"
                android:textSize="@dimen/size_14dp" />

            <ImageView
                android:id="@+id/editNull"
                android:layout_width="@dimen/size_25dp"
                android:layout_height="@dimen/size_25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/size_20dp"
            android:layout_marginBottom="@dimen/size_15dp">

            <TextView
                android:id="@+id/button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/main_font"
                android:text="취소"
                android:textColor="#000000"
                android:textSize="@dimen/size_13dp" />

            <TextView
                android:id="@+id/button_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_30dp"
                android:fontFamily="@font/main_font"
                android:text="확인"
                android:textColor="#000000"
                android:textSize="@dimen/size_13dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>