<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".HomeActivity_UserMenu">

    <!-- 상단바 !-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_55dp">

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="@dimen/size_25dp"
            android:layout_height="@dimen/size_25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_20dp"
            android:src="@drawable/back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_toRightOf="@+id/button_back"
            android:fontFamily="@font/main_font"
            android:text="설정"
            android:textColor="#000000"
            android:textSize="@dimen/size_14dp" />
    </RelativeLayout>

    <!-- 프로필 !-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_100dp"
        android:layout_marginLeft="@dimen/size_20dp"
        android:layout_marginRight="@dimen/size_30dp">

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="@dimen/size_60dp"
            android:layout_height="@dimen/size_60dp"
            android:layout_centerVertical="true"
            android:src="@drawable/profile_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_toRightOf="@+id/user_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/main_font"
                android:text="홍길동"
                android:textColor="#000000"
                android:textSize="@dimen/size_16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/main_font"
                    android:text="010-1234-5678"
                    android:textColor="#575757"
                    android:textSize="@dimen/size_13dp" />

                <ImageView
                    android:id="@+id/button_edit"
                    android:layout_width="@dimen/size_20dp"
                    android:layout_height="@dimen/size_20dp"
                    android:layout_marginLeft="@dimen/size_5dp"
                    android:src="@drawable/edit_icon" />
            </LinearLayout>
        </LinearLayout>

        <android.widget.Button
            android:id="@+id/button_logout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_5dp"
            android:background="@drawable/setting_logout_button_selector"
            android:fontFamily="@font/main_font"
            android:text="로그아웃"
            android:textColor="#646464"
            android:textSize="@dimen/size_13dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BBBBBB" />

    <!-- 비밀번호 변경 !-->
    <LinearLayout
        android:id="@+id/button_pass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_65dp"
        android:background="@drawable/setting_list_layout_selector"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/size_25dp"
            android:layout_height="@dimen/size_25dp"
            android:layout_marginLeft="@dimen/size_20dp"
            android:src="@drawable/setting_pass_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15dp"
            android:fontFamily="@font/main_font"
            android:text="비밀번호 변경"
            android:textColor="#000000"
            android:textSize="@dimen/size_14dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#BBBBBB" />

    <!-- 알림 설정 (업데이트 예정) !-->
    <LinearLayout
        android:id="@+id/button_alarm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_65dp"
        android:background="@drawable/setting_list_layout_selector"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/size_25dp"
            android:layout_height="@dimen/size_25dp"
            android:layout_marginLeft="@dimen/size_20dp"
            android:src="@drawable/setting_alarm_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15dp"
            android:fontFamily="@font/main_font"
            android:text="알림"
            android:textColor="#000000"
            android:textSize="@dimen/size_14dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#BBBBBB" />

    <!-- 고객센터 (업데이트 예정) !-->
    <LinearLayout
        android:id="@+id/button_help"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_65dp"
        android:background="@drawable/setting_list_layout_selector"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/size_25dp"
            android:layout_height="@dimen/size_25dp"
            android:layout_marginLeft="@dimen/size_20dp"
            android:src="@drawable/setting_help_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15dp"
            android:fontFamily="@font/main_font"
            android:text="고객센터"
            android:textColor="#000000"
            android:textSize="@dimen/size_14dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#BBBBBB" />

    <!-- 계정 탈퇴 (업데이트 예정) !-->
    <LinearLayout
        android:id="@+id/button_secession"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_65dp"
        android:background="@drawable/setting_list_layout_selector"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/size_25dp"
            android:layout_height="@dimen/size_25dp"
            android:layout_marginLeft="@dimen/size_20dp"
            android:src="@drawable/setting_secession_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15dp"
            android:fontFamily="@font/main_font"
            android:text="회원 탈퇴"
            android:textColor="#850000"
            android:textSize="@dimen/size_14dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#BBBBBB" />
</LinearLayout>